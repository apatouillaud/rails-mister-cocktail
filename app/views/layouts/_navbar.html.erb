        <li><%= link_to "List all cocktails", cocktails_path, class: "navbar-wagon-item navbar-wagon-link" %></li>
        <li><%= link_to "Create a cocktail", new_cocktail_path, class: "navbar-wagon-item navbar-wagon-link" %></li>
