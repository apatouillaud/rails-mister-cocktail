<div class="navbar-wagon">
  <!-- Logo -->

  <div><%= image_tag "logo.png", alt: "Mister cocktail", class: "navbar-wagon-brand" %></div>
  <div .title >COCKTAIL CASA</div>

  <!-- Right Navigation -->
  <div class="navbar-wagon-right hidden-xs hidden-sm">

    <%= link_to "List all cocktails", cocktails_path, class: "navbar-wagon-item navbar-wagon-link" %>
