
<div class="container">


  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <h1>Recipe of <%= @cocktail.name  %></h1>
      <div>
        <%= link_to 'Add an ingredient', new_cocktail_dose_path(@cocktail), class: "btn btn-success" %>
      </div>
      <br>
    </div>

    <div class="cards">
      <% @cocktail.doses.each do |dose| %>
        <div class="col-md-6 col-md-offset-3">
          <div class="card-description">
            <div id="description">
              <%= dose.description %> <%= dose.ingredient.name %>
            </div>
            <div id="delete">
              <%= link_to "Delete", dose_path(dose), method: :delete %>
            </div>
          </div>
        </div>
      <% end %>
      <br>
    </div>

    <div class="col-md-6 col-md-offset-3">
      <br>
      <div>
      <%= link_to 'List of cocktails', cocktails_path, class: "btn btn-success" %>
      </div>
    </div>
  </div>

</div>




